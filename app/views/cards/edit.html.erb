<section>
  <p style="font-size: 22px;">
    РЕДАКТИРУЕТСЯ КАРТОЧКА:
  </p>

  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2>
        <% pluralize(@card.errors.count, "error") %> 
        эта карточка запонена некорректно! ошибки:
      </h2>
      <ul>
        <% @card.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for :card, url: card_path(@card), method: :patch do |f| %>
    <p>
      <%= f.label :original_text %><br>
      <%= f.text_field :original_text %>
    </p>
   
    <p>
      <%= f.label :translated_text %><br>
      <%= f.text_field :translated_text %>
    </p>
   
    <p>
      <%= f.submit 'Обновить'%>
    </p>
  <% end %>

  <%= link_to 'Назад', root_path %>   

</section>
